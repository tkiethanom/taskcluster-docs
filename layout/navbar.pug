nav.navbar.navbar-default.navbar-static-top(role='navigation')
  .container-fluid
    .navbar-header
      a.navbar-brand(href='/')
        img(height='36', width='36', src='/assets/taskcluster-nav-logo.png')
        |              TaskCluster Docs
    ul.nav.navbar-nav.navbar-right
      - var sections = { tutorial : 'Tutorial', manual: 'Manual', reference: 'Reference' }
      for section, p in sections
        li(class= (p === path.split('/')[1]) && 'active')
          a(href= "/" + p)= section
      li.dropdown
        a.dropdown-toggle(data-toggle="dropdown", role="button", href="#", type="button")
          | More&nbsp;
          span.caret
        ul.dropdown-menu(role="menu")
          li
            a(href="/presentations") Presentations
          li.divider(role="separator")
          li.dropdown-header External Links
          li
            a(href="http://planet.mozilla.org/taskcluster") Blog
          li
            a(href="https://github.com/taskcluster") GitHub
          li
            a(href="https://travis-ci.org/taskcluster") Travis CI
      form.navbar-form.navbar-left.search
        .form-group.has-feedback
          input#docs-search.form-control(type='text', autocomplete='off', name='query')
          span.glyphicon.glyphicon-search.form-control-feedback(aria-hidden='true')
      li
        a(href="https://tools.taskcluster.net") TaskCluster Tools